CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = /bin/rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $(NAME)

clean:
    $(RM) $(NAME)
    $(RM) $(wildcard *~)

oclean:
    $(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): %.o: %.c m.h
    $(CC) $(CFLAGS) -c $< -o $@

